// sign-up Page Styles



// Intro content, profile image and name, back button 

.intro {
  height: 100%;
  min-height: 100%;
  z-index: 20;
  cursor: pointer;
  padding-left: 35px;
  padding-right: 35px;
}

#intro_beta {
  background: $light-accent2;
}

#intro_career {
  background: $light-blue;
}

#intro_partner {
  background: $light-orange;
}

#faq-beta {
  background: $light-accent2;
	opacity: 1;
}

#faq-careers {
  background: $light-blue;
  opacity: 1;
}

#faq-partner {
  background: $light-orange;
  opacity: 1;
}

.profile img {
  margin-top: 30%;
}

.profile-fr img {
  margin: 0 auto;
  margin-top: 2rem;
}

.intro-content {
  padding: 10% 0 0;
  h2 {
    display: block;
    font-size: 30pt;
    font-weight: 100;
  }
}


.faq-text-fr {
  margin: 40px;
  margin-top: 60px;
  padding: 40px 30px;
  h1 {
    display: inline-block;
    white-space: nowrap;
    font-weight: 600;
    font-size: 46px;
    margin-bottom: 30px;
    color: $midnight-blue;
  }
  h4 {
    font-weight: 500;
    text-transform: uppercase;
    font-size: 12pt;
    margin-top: 0;
    color: $midnight-blue;
    margin-bottom: 2px;
    line-height: 1.2;
  }
  hr {
    margin-top: 10px;
    margin-bottom: 10px;
    border-width: 2px;
  }
  p {
    font-size: 18px;
    line-height: 1.4;
    color: $midnight-blue;
  }
  section {
  margin: 10px 0 40px 0;
  padding: 0 60px 0 10px;
  }
}


.faq-text {
  margin: 40px;
  margin-top: 60px;
  padding: 40px 30px;
  h1 {
    display: inline-block;
    white-space: nowrap;
    font-weight: 600;
    font-size: 46px;
    margin-bottom: 30px;
    color: $midnight-blue;
  }
  h4 {
    font-weight: 500;
    text-transform: uppercase;
    font-size: 12pt;
    margin-top: 0;
    color: #2c3e50;
    margin-bottom: 2px;
    line-height: 1.2;
  }
  hr {
    margin-top: 10px;
    margin-bottom: 10px;
    border-width: 2px;
  }
  p {
    font-size: 18px;
    line-height: 1.4;
    color: $midnight-blue;
  }
  section {
  margin: 10px 60px 40px 0;
  padding: 0 20px 0 10px;
  }
}


// Landscape phone to portrait tablet
@media (max-width: 767px) {

  .intro {
    height: 34%;
    min-height: 33%;
    width: 100%;
    z-index: 20;
    cursor: pointer;
    padding-left: 35px;
    padding-right: 35px;
  }

  #signUp .fp-tableCell {
    vertical-align: baseline;
  }
  
  .intro-content {
    padding: 0;
    visibility: visible;
    transform: translateX(0%);
    transition: transform .4s ease-in-out;
  }

  .intro-text {
    visibility: hidden;
    transform: translateX(200%);
    transition: transform .4s ease-in-out, visibility 0 .4s;
    p {
      line-height: 1.5rem;
    }
  }
  
  .swap {
    transition: 0.6s;
    transform-style: preserve-3d;

    position: relative;
  }

  .intro-text.intro-open {
    visibility: visible;
    background-color: inherit;
    transform: translateX(0%);
    transition: transform .4s ease-in-out;
    .profile {
      visibility: hidden;
      transition: transform .4s ease-in-out, visibility 0 .4s;
      transform: translateX(-200%);
    }
  }
  
  .profile img {
      margin-top: 15px;
  }

}